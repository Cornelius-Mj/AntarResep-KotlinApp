<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NotificationPage">

    <FrameLayout
        android:id="@+id/Notification_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/wallet_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notifikasi"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="25dp"
            android:drawablePadding="40dp"
            android:drawableLeft="@drawable/ic_baseline_arrow_back_ios_24"/>
    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/notification_Navigation"
        android:layout_width="420dp"
        android:layout_height="55dp"
        android:layout_below="@id/Notification_header"
        app:menu="@menu/notification_navbar"/>

    <FrameLayout
        android:id="@+id/flNFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/notification_Navigation"/>

</RelativeLayout>





