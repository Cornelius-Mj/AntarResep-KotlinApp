<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/Filter_BottomSheet"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/Filter_Txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Filter"
        android:textSize="18sp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/black"
        android:gravity="center_horizontal"
        android:layout_margin="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Filter_Txt"
        android:id="@+id/Filter_Star"
        android:drawableLeft="@drawable/ic_baseline_star_24"
        android:layout_marginLeft="30dp"
        android:text="Rating"
        android:gravity="center"
        android:drawablePadding="10dp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_bold"
        />

    <TextView
        android:layout_below="@id/Filter_Txt"
        android:layout_toRightOf="@id/Filter_Star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hanya diatas 4"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:paddingTop="5dp"
        android:layout_marginLeft="60dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Filter_Star"
        android:id="@+id/Filter_Price"
        android:drawableLeft="@drawable/ic_baseline_attach_money_24"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:text="Price"
        android:textSize="14sp"
        android:gravity="center"
        android:drawablePadding="10dp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_bold"
        />

    <Button
        android:id="@+id/Filter_Terendahprice"
        android:layout_below="@id/Filter_Star"
        android:layout_toRightOf="@id/Filter_Price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terendah"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="40dp" />

    <Button
        android:layout_below="@id/Filter_Star"
        android:layout_toRightOf="@id/Filter_Terendahprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Termahal"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="40dp" />



</RelativeLayout>